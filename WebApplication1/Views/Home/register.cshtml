﻿
@{
    ViewData["Title"] = "Register";
}
<h1>Register</h1>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form id="userForm">
            <div class="mb-3">
                <label for="userName" class="form-label">姓名：</label>
                <input type="text" class="form-control" id="userName" name="Name">
                <div class="alert alert-warning" id="divWarning"></div>
            </div>
            <div class="mb-3">
                <label for="UserEmail" class="form-label">電子郵件：</label>
                <input type="email" class="form-control" id="UserEmail" name="Email">
            </div>
            <div class="mb-3">
                <label for="userAge" class="form-label">年紀：</label>
                <input type="number" class="form-control" id="userAge" name="Age">
            </div>

            <button id="button1" type="submit" class="btn btn-primary">送出</button>
        </form>
        <div class="alert alert-info" id="div1"></div>
    </div>
    <div class="col-3">
    </div>
</div>
@section Scripts {
    <script>
        const txtname = document.querySelector('#userName');
        const txtmail = document.querySelector('#UserEmail');
        const txtage = document.querySelector('#userAge');
        const txtwarm = document.querySelector('#div1');

        //因為submit預設post，所以要停止預設行為
        const btnSubmit = document.querySelector('#button1');
        btnSubmit.addEventListener('click', async(event) => {
            event.preventDefault();//停止預設行為


            const url = `@Url.Content("~/msit/register")?name=${txtname.value}&age=${txtage.value}&email=${txtmail.value}`;
            const response = await fetch(url);
            const data = await response.text();
            console.log(data);
            txtwarm.innerHTML = data;

        })
    </script>
}